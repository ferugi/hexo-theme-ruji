html,
body
    height: 100%
    width: 100%
    min-height: 100%
    min-width: 100%
    padding: 0
    margin: 0
    border: 0

body
    background: $base
    vertical-align: baseline;
    color: $text
    font-family: 'Open Sans', 'sans-serif'

p
    font-size: 0.875em

h1
    font-size: 1.2em
    font-weight: 600

    &.title
        font-size: 2em

h2
    font-size: 1em
    font-weight: bold

a
    font-weight: bold
    text-decoration: none
    color: $feature

    &:visited
        color: $feature
    
    &:hover
        color: $feature-light
        text-decoration: underline

code
    font-family: monospace
    display: inline-block
    background: rgba(0,0,0,0.1)
    border-radius: 2px
    padding: 0.2em 0.35em
    word-break: break-all

input
    text-shadow: 0px
    border-radius: 5px
    border: solid 1px #ccc
    padding: 5px

    &:focus
        border-radius: 10px
img
    max-height: 100%
    max-width: 100%

.site-footer
    text-align: center
    font-size: 70%
.main-nav
    text-align: center
    width: 100%

    a
        margin: 1em

main
    width: auto
    transition: 0.25s
    overflow: hidden
    padding: 6em 1em

.title
    font-family: 'Nunito Sans', sans-serif
    text-align: center

#bio
    margin-bottom 10em

#titlepanel
    z-index: 1
    background: $feature
    transition: width 0.25s
    color: $base
    overflow: hidden
    text-shadow: 0em 0em 0.5em #000
    text-align: center

    .contact-links
        position: relative

        ul
            padding: 0
            margin: 0
            list-style-type: none

            li
                margin: 1em
                display: inline

                i
                    font-size: 2em
        a
            color: $base

            &:hover
                color: $base-dark

    &.index
        background: url($titlescreen-background) 50% 10px no-repeat,
            linear-gradient(133deg, 
                $feature-lightest 0%, 
                $feature-light 65%, 
                $feature 100%),
            $feature
        background-size: auto 120%
        height: 100%
        font-size: 2vh

        .contact-links
            position: relative
            top: 72%
            width: 100%
        
        h1, h2
            margin: 0
            width: 100%

        h1.title
            position: relative
            top: 69%
            font-size: 4em
            font-weight: bold

        h2
            font-size: 1.1em
            position: relative
            top: 69.4%

.profile-pic
    width: 15em
    height: 15em
    margin: auto
    background: url($profilepic) no-repeat
    background-position: 0 -1em
    background-size: 100% auto
    border-radius: 1em

.clearfix
    clear: both

.button, .button:visited
    background: $feature
    color: $base
    padding: 0.3em 0.6em
    border-radius: 0.25em
    font-size: 0.875em

    &:hover
        text-decoration: none
        background: $feature-light

#topbar, #bottombar
    z-index: 1
    width: 100%
    background: $feature
    
    position: fixed
    color: $base
    font-size: 1em

    .iconpic
        position: absolute
        height: 2em
        width: 2em
        margin: 0.7em 0 0 0.7em
        border-radius: 50%
        background: url($profilepic) no-repeat
        background-position: 0em 20%
        background-size: 100% auto

        h1
            margin: 0.2em 2em
            font-family: 'Nunito Sans', sans-serif

    .button, .button:visited
        color: $base

    &.index
        display: none
    a
        color: $base
        
    ul
        text-align: center
        margin: 1em auto
        padding: 0
        
        li
            display: inline

            a
                color: $base
#bottombar
    bottom: 0

    .contact-links ul
        text-align: right

.pagination
    max-width: 32em
    margin: auto
    padding: 0
    text-align: center


    .page-number
        margin: auto 0.5em
        font-size: 0.875em
        font-weight: bold
        padding: 0.3em 0.6em
        border-radius: 0.25em

        &.current
            color: $base
            background: $base-dark

    a
        margin: auto 0.5em
        background: $feature
        color: $base
        font-size: 0.875em
        padding: 0.3em 0.6em
        border-radius: 0.25em

        &:hover
            text-decoration: none
            background: $feature-light
        
.pull-right
    float: right

.pull-left
    float: left


#categories, #tags
    max-width: 40em
    margin: 0 auto

// Media Rules

// Large / Desktop / High Res Landscape
@media only screen and (min-width: 60em) and (min-aspect-ratio: 1/1)
    #titlepanel
        position: fixed
        float: left
        width: 20%
        font-size: 1vw

        &.index
            width: 50%
            height: 100%
        
    article
        &.index
            max-width: 40em
            
            .icon
                position: static
                margin-right: 1em
                margin-left: 0
            
            header, footer, .entry
                margin-left: 6em

    main
        &.index
            margin-left: 50%
            padding: 5em 1em


// Small / Mobile / Low Res Portrait
@media only screen and (max-width: 60em)
    #titlepanel.index
        width: 100%
        height: 70%
    
    main
        &.index
            padding: 2em 1em

// Article Min-Width
@media only screen and (max-width: 46em)
    .iconpic
        h1
            display: none

    article
        .icon
            display: none
    
// Extreme Portait
@media only screen and (max-aspect-ratio: 8/13)
    #titlepanel.index
        font-size: 3vw

// Extreme Portait
@media only screen and (min-aspect-ratio: 13/8) and (max-width: 60em)
    #titlepanel.index
        font-size: 1.3vw

// Min height
@media only screen and (max-height: 400px)
    #titlepanel.index
        h2
            display: none
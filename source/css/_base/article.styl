article
    margin: 0 auto 3em auto
    max-width: 32em

    header, footer, .entry
        line-height: 1.6
        max-width: 32em

    h2
        margin-top: 1.5em
        font-size: 1.2em
    
    h3
        font-size: 1.05em

    .page-nav
        float: right
        margin-right: -7em

    header
        a
            &:hover
                text-decoration: none
                background: $feature-light
                
        h1
            font-weight: bold
            background-color: $text
            color: $base
            margin: 0.2em 0 0 0
            padding: 0.2em 0.7em
            border-bottom: 1px solid rgba(0,0,0,0.25)
            border-radius: 2px

        #me
            font-weight: 300

        time
            padding: 0.5em
            font-size: 0.8em
            color: $text

    .icon
        width: 5em
        height: 5em
        margin: auto
        border-radius: 10px
        float: left
        margin-left: -6em
        position: absolute

        i
            margin: 0.15em 0 0 0.2em
            font-size: 4em

    hr
        border: none
        border-top: 1px solid $base-dark
        color: $base-dark

    footer
        .categories, .tags
            color: $base-dark
            font-size: 0.75em
            padding: 0
            margin: 0

            li
                display: inline
            
                &+:before
                    content: ", "

            .fa
                margin-right: 0.5em

#comments
    margin: auto
    max-width: 32em
article
    margin: 0 auto 3em auto
    max-width: 32em

    header, footer, .entry
        line-height: 1.6
        max-width: 32em

    h2
        margin-top: 2em
        
    header
        h1
            font-weight: bold
            color: $text
            margin: 0
            border-bottom: 2px solid #ccc

        time
            font-weight: 300

    .icon
        width: 5em
        height: 5em
        margin: auto
        color: $feature
        border-radius: 10px
        float: left
        margin-left: -6em
        position: absolute

        i
            margin: 0.15em 0 0 0.2em
            font-size: 4em

    hr
        border: none
        border-top: 1px solid $base-dark
        color: $base-dark

    footer
        .categories, .tags
            color: $base-dark
            font-size: 0.75em
            padding: 0
            margin: 0

            li
                display: inline
            
                &+:before
                    content: ", "

            .fa
                margin-right: 0.5em

#comments
    margin: auto
    max-width: 32em
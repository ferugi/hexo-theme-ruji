<% if (
    (is_home()) && 
    (site.pages) && 
    (site.pages.filter(function(item){return item.layout == "bio"}).first())
    ) { %>
    <section id="bio">
        <%- partial('_partial/bio', {item: site.pages.filter(function(item){return item.layout == "bio"}).first(), index: true}) %>
    </section>
<% } %>

<section id="articles">
    <h1 class="title">Blog</h1>
    <% page.posts.each(function(item){ %>
        <%- partial('_partial/article', {item: item, index: true}) %>
    <% }); %>
    <%- partial('_partial/pagination') %>
</section>